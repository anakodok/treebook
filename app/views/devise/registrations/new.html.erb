<div class="row">
  <div class="col-xs-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "well" }) do |f| %>
      <%= f.error_notification %>
      <fieldset>
        <legend>Registration</legend>
        <div class="form-inputs">
        	<%= f.input :first_name, autofocus: true %>
        	<%= f.input :last_name %>
        	<%= f.input :profile_name %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-success" %>
        </div>
        </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>